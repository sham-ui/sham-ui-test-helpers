{
  "name": "sham-ui-test-helpers",
  "version": "4.0.3",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "jest --coverage",
    "test:watch": "jest --watchAll",
    "test:clear-cache": "jest --clearCache",
    "build": "webpack --mode=production --progress",
    "doc:generate": "documentation readme src/index.js --section=API",
    "doc:lint": "documentation lint src/**",
    "prepublish": "yarn build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sham-ui/sham-ui-test-helpers.git"
  },
  "keywords": [
    "sham-ui"
  ],
  "author": "Eugene Burnashov <shamcode@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sham-ui/sham-ui-test-helpers/issues"
  },
  "homepage": "https://github.com/sham-ui/sham-ui-test-helpers#readme",
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/plugin-proposal-class-properties": "^7.0.0",
    "@babel/plugin-proposal-decorators": "^7.0.0",
    "@babel/plugin-proposal-function-bind": "^7.0.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/plugin-transform-modules-umd": "^7.0.0",
    "@babel/polyfill": "^7.0.0",
    "@babel/preset-env": "^7.6.3",
    "@babel/runtime": "^7.11.0",
    "babel-eslint": "^10.0.3",
    "babel-jest": "^24.9.0",
    "babel-loader": "^8.0.0",
    "babel-plugin-macros": "^2.6.1",
    "core-js": "^3.3.2",
    "css-loader": "~3.2.0",
    "documentation": "^12.1.2",
    "eslint": "^5.16.0",
    "eslint-plugin-jest": "^22.17.0",
    "express": "^4.16.3",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "jest-runner-eslint": "^0.6.0",
    "node-sass": "^4.12.0",
    "sass-loader": "~7.1.0",
    "sham-ui-jest-preprocessor": "^4.0.3",
    "sham-ui-macro": "^1.0.0",
    "sham-ui-templates": "^4.1.0",
    "sham-ui-templates-loader": "^4.0.3",
    "style-loader": "~0.23.1",
    "webpack": "~4.41.2",
    "webpack-cli": "^3.3.9",
    "webpack-dev-middleware": "~3.7.0",
    "webpack-hot-middleware": "^2.25.0"
  },
  "dependencies": {
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^24.9.0",
    "find-babel-config": "^1.2.0",
    "jest": "^24.9.0",
    "pretty": "^2.0.0",
    "sham-ui": "^4.0.1"
  },
  "babel": {
    "presets": [
      [
        "@babel/env",
        {
          "useBuiltIns": "usage",
          "corejs": 3,
          "shippedProposals": true
        }
      ]
    ],
    "plugins": [
      [
        "@babel/plugin-proposal-decorators",
        {
          "legacy": true
        }
      ],
      [
        "@babel/plugin-proposal-class-properties",
        {
          "loose": true
        }
      ],
      "@babel/plugin-transform-modules-umd",
      "@babel/plugin-proposal-function-bind",
      [
        "@babel/plugin-proposal-object-rest-spread",
        {
          "useBuiltIns": true
        }
      ],
      "macros"
    ]
  },
  "jest": {
    "projects": [
      {
        "displayName": "test",
        "moduleFileExtensions": [
          "js",
          "json",
          "sfc"
        ],
        "transform": {
          "^.+\\.sht$": "sham-ui-jest-preprocessor",
          "^.+\\.sfc$": "sham-ui-jest-preprocessor",
          "^.+\\.js$": "babel-jest"
        },
        "collectCoverageFrom": [
          "src/*.js"
        ],
        "testURL": "http://sham-ui-test-helpers.example.com",
        "testPathIgnorePatterns": [
          "<rootDir>/node_modules/",
          "<rootDir>/__tests__/setup-jest.js"
        ],
        "setupFilesAfterEnv": [
          "<rootDir>/__tests__/setup-jest.js"
        ]
      },
      {
        "runner": "jest-runner-eslint",
        "displayName": "lint",
        "testMatch": [
          "<rootDir>/src/*.js",
          "<rootDir>/__tests__/**/*.js"
        ]
      }
    ]
  },
  "browserslist": [
    "> 1%",
    "not dead",
    "not ie <= 11"
  ]
}
