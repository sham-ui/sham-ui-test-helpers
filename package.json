{
  "name": "sham-ui-test-helpers",
  "version": "1.6.3",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "jest --coverage --no-cache",
    "watch": "jest --watchAll",
    "build": "WEBPACK_ENV=build webpack",
    "prepublish": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sham-ui/sham-ui-test-helpers.git"
  },
  "keywords": [
    "sham-ui"
  ],
  "author": "Eugene Burnashov <shamcode@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sham-ui/sham-ui-test-helpers/issues"
  },
  "homepage": "https://github.com/sham-ui/sham-ui-test-helpers#readme",
  "babel": {
    "presets": [
      ["env", {
        "targets": {
          "browsers": ["last 2 versions", "safari >= 7"]
        }
      }]
    ],
    "plugins": [
      "transform-decorators-legacy",
      "transform-class-properties",
      "transform-es2015-modules-umd"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.sht$": "sham-ui-jest-preprocessor",
      "^.+\\.js$": "babel-jest"
    },
    "collectCoverageFrom": [
      "src/*.js"
    ]
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-jest": "^21.2.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-class-properties": "^6.18.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-es2015-modules-umd": "^6.24.1",
    "babel-polyfill": "^6.23.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-jest": "^21.2.0",
    "regenerator-runtime": "^0.11.0",
    "sham-ui-jest-preprocessor": "^1.0.3",
    "webpack": "^3.10.0"
  },
  "dependencies": {
    "jest": "^21.2.1",
    "sham-ui": "^1.3.3"
  }
}
